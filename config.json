{
  "baseUrl": "http://wk-qa.mldev.cloud",
  "featuresDir": "tests/features",
  "stepsDir": "tests/steps",
  "reportDir": "reports",
  "reportSingle": false,
  "reporter": "marvin",
  "threads": 1,

  "verbose": true,
  "stepDelay": 500,
  "testTimeout": 60000,
  "elementTimeout": 5000,

  "copyReport": false,
  "pending": true,

  "tags": "!@wip,!@NSM",
  "buildtag": "",
  "testSourceLinkTemplate": "`https://bitbucket.org/mnv_tech/wk_test/commits/${config.gitsha}`",

  "screenSize": {
    "x": 1600,
    "y": 900
  },

  "browsers": [{
    "browserName": "chrome",
    "chromeOptions": {
      "args": ["--no-sandbox"]
    }
  }]
}
