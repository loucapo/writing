{
    "baseUrl": "http://localhost:10080",
    "featuresDir": "tests/features",
    "stepsDir": "tests/steps",
    "reportDir": "reports",
    "reporters": [{"name": "marvin-reporter"}],
    "threads": 1,

    "verbose": true,
    "stepDelay": 0,
    "testTimeout": 60000,
    "elementTimeout": 1500,

    "copyReport": false,
    "pending": true,

    "tags": "!@wip,!@NSM,!@api,!@Bug",
    "buildtag": "",

    "testSourceLinkTemplate": "`https://bitbucket.org/mnv_tech/wk_test/commits/${config.gitsha}`",

    "screenSize": {
        "x": 1600,
        "y": 900
    },
    "browsers": [{
        "browserName": "chrome",
        "chromeOptions": {
            "args": ["--no-sandbox"]
        }
    }]
}
