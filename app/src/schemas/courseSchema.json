{
  "course": {
    "title": "Course",
    "description": "Course",
    "type": "object",
    "minProperties" : 3,
    "required": [
      "id",
      "title"
    ],
    "properties": {
      "id": {
        "description": "The unique identifier for a course",
        "type": "string",
        "format": "uuid"
      },
      "title": {
        "description": "Title of the course",
        "type": "string"
      },
      "sections": {
        "description": "Section to break up the course e.g. chapter week semester",
        "type": "array"
      }
    }
  },
  "section": {
    "title": "section",
    "description": "section",
    "type": "object",
    "minProperties" : 5,
    "required": [
      "id",
      "title",
      "order"
    ],
    "properties": {
      "id": {
        "description": "The unique identifier for a section",
        "type": "string",
        "format": "uuid"
      },
      "title": {
        "description": "Title of the section",
        "type": "string"
      },
      "order": {
        "description": "Order to present section",
        "type": "number"
      },
      "summary": {
        "description": "summary of the section",
        "type": "string"
      },
      "assignments": {
        "description": "assignments to perform for this section",
        "type": "array"
      }
    }
  },
  "assignment": {
    "title": "assignment",
    "description": "assignment",
    "type": "object",
    "minProperties" : 8,
    "required": [
      "id",
      "name",
      "link",
      "type"
    ],
    "properties": {
      "id": {
        "description": "The unique identifier for an assignment",
        "type": "string",
        "format": "uuid"
      },
      "name": {
        "description": "Name of the assignment",
        "type": "string"
      },
      "link": {
        "description": "link to access the assignment",
        "type": "string",
        "format": "uri"
      },
      "type": {
        "description": "type of assignment",
        "type": "string"
      },
      "openDate": {
        "description": "Date that the assignment is open to act upon",
        "type": "string",
        "format": "date-time"
      },
      "closeDate": {
        "description": "Date that the assignment is closes and can no longer be acted upon",
        "type": "string",
        "format": "date-time"
      },
      "pointsAvailable": {
        "description": "how many points are available to earn",
        "type": "number"
      },
      "pointsEarned": {
        "description": "points earned out of total available",
        "type": "number"
      }
    }
  }
}

