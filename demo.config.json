{
  "baseUrl": "http://wk-pink.mldev.cloud",
  "featuresDir": "tests/features",
  "stepsDir": "tests/steps",

  "reporters": [{"name": "marvin-reporter",
                 "options": {"juice": "isloose"}},
                {"name": "mocha-bamboo-reporter",
                 "options": {"output": "bamboo-style.json"}}
               ],
  "reportDir": "reports",
  "copyReport": false,
  "pending": true,

  "verbose": true,
  "stepDelay": 200,
  "testTimeout": 60000,
  "elementTimeout": 1000,

  "tags": "!@wip,!@NSM",
  "testSourceLinkTemplate": "`https://bitbucket.org/mnv_tech/wk_test/commits/${config.gitsha}`",

  "threads": 1,
  "browsers": [
    {"browserName": "chrome",
     "chromeOptions": {
       "args": ["--no-sandbox"]}},
    { "browserName": "firefox"}],

  "screenSize": {
    "x": 1600,
    "y": 900
  }
}
